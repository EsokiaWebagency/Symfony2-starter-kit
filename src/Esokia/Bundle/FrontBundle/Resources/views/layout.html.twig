{% extends "::base.html.twig" %}

{% block stylesheets %}
{{ parent() }}
{% stylesheets 'css/front.css' filter='cssrewrite' output='css/compiled/front.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% endblock %}



{% block head -%}
 
{% endblock %}

{% block rightHeader %}
            <div class='col-md-2'>
                       <a href="{{path('esokia_admin_homepage')}}" class="btn btn-default">{{'Administration'|trans}}</a>
            </div>
{% endblock %}
    
    
{% block body -%}

        <div class="row">
           <div class="col-md-2">
               {{ knp_menu_render('EsokiaFrontBundle:MenuBuilder:mainMenu',   {'currentAsLink':false, 'currentClass': 'active'} ) }}
           </div>
           <div class="col-md-10">
                  <div class="row">

               
                    <div class="col-md-9">
                     {% block content_header %}
                     {% endblock %}
                    </div>


                    <div class="col-md-9">
                       {% block content %}{% endblock %}
                    </div>
             </div>
        </div>
            
            
    </div>

{% endblock %}

{% block footer -%}
    {{ include('EsokiaFrontBundle:Footer:footer.html.twig') }}
{% endblock footer %}


{% block javascripts %}
      <script>
        if(typeof(globalVars)!='object'){ globalVars = {}; }
        globalVars.defaultAlertMessage =  "{{'esokia.default_confirm_alert'|trans({}, 'esokia_default')}}";
     </script>
    {{parent()}}
    
    {% javascripts 'js/front.js' output='js/compiled/front.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}