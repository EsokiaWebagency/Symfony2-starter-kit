 {% extends "EsokiaAdminBundle::layout.html.twig" %}

{% block content -%}
    <h1>{{'esokia.user_list'|trans({}, 'esokia_default') }}</h1>

    <table class="table table-striped table-responsive table-hove">
        <thead>
            <tr>
                <th>{{'esokia.username'|trans({}, 'esokia_default') }}</th>
                <th>{{'esokia.actions'|trans({}, 'esokia_default') }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                <td class="action">
                        <a href="{{ path('admin_user_show', { 'id': entity.id }) }}" data-toggle="tooltip" data-placement="top" title="{{'esokia.show_user'|trans({}, 'esokia_default')}}"><span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span></a>
                        &nbsp;<a href="{{ path('admin_user_edit', { 'id': entity.id }) }}" data-toggle="tooltip" data-placement="top" title="{{'esokia.edit_user'|trans({}, 'esokia_default')}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        &nbsp;<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="resetPwd" data-toggle="tooltip" data-placement="top" title="{{'esokia.reset_user_password'|trans({}, 'esokia_default')}}"><input name="username" value="{{entity.username}}" type="hidden" ><a href="#" class="fakelink"><span class="glyphicon glyphicon glyphicon-send reset-user-password" data-confirm="{{'This action will send a reset password email to this user'|trans({}, 'esokia_default')}}" aria-hidden="true"></span></a></form>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a href="{{ path('admin_user_new') }}" class="btn btn-default">
              {{'esokia.new_user'|trans({}, 'esokia_default')}}
            </a>

    {% endblock content %}
