 {% extends "EsokiaAdminBundle::layout.html.twig" %}
 {% trans_default_domain 'FOSUserBundle' %}

{% block title %}{{'User Profile '|trans({}, 'esokia_default')}} {% endblock title %}

 
{% block content_header %}
        <h3>{{'User profil of'|trans({}, 'esokia_default')}}: {{user.username}}</h3>
    {% endblock %}
{% block content -%}
    
<div class="fos_user_user_show">
    <table class="table table-striped table-condensed">
        <tbody>
            <tr>
                <th>{{ 'profile.show.username'|trans }}</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>{{ 'profile.show.firstname'|trans }}</th>
                <td>{{ user.firstname }}</td>
            </tr> 
            <tr>
                <th>{{ 'profile.show.name'|trans }}</th>
                <td>{{ user.name }}</td>
            </tr>  
            <tr>
                <th>{{ 'profile.show.email'|trans }}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th></th>
                <td></td>
            </tr> 
      {#      <tr>
                <th>{{ 'profile.show.enabled'|trans }}?</th>
                <td>{{ user.enabled ? 'Yes':'No' }}</td>
            </tr>
           #}
            </tr>
            <tr>
                <th>{{ 'profile.show.lastlogin'|trans }}?</th>
                <td>{{ user.lastLogin|date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th>{{ 'profile.show.locked'|trans }}?</th>
                <td>{{ user.locked ? 'Yes':'No' }}</td>
            </tr>  
            <tr>
                <th>{{ 'profile.show.roles'|trans }}?</th>
                <td>{{ user.roles|join(', ')|replace({'ROLE_': ''})|lower }}</td>
            </tr>   
        </tbody>
    </table>

   <ul class="list-inline">
    <li>
        <a href="{{ path('admin_user') }}"  class="btn btn-default">
            {{'esokia.back_to_list'|trans({}, 'esokia_default')}}
        </a>
    </li>
    <li>
        <a href="{{ path('admin_user_edit', { 'id': user.id }) }}" class="btn btn-warning">
            {{'esokia.edit'|trans({}, 'esokia_default')}}
        </a>
    </li>
    {% if 'ROLE_ADMIN' not in user.roles %}
        <li>{{ form(delete_form) }}</li>
    {% endif %}
</ul>
{% endblock %}
