{% extends "EsokiaUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div class="alert alert-danger col-md-5 col-md-offset-3" role="alert"><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <span class="sr-only">{{'Error'|trans}}:</span> {{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<div class="row">
    
    <div class="col-md-5 col-md-offset-3">
        <form action="{{ path("fos_user_security_check") }}" method="post"  role="form"  class="form-horizontal">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="form-group">
              <label for="username" class="col-sm-4 control-label">{{ 'security.login.username'|trans }}</label>
                  <div class="col-sm-8">
                     <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"  class="form-control" placeholder="{{'Enter your username'|trans}}" />
                  </div>
             </div>
                  
                  
            <div class="form-group">
                <label for="password" class="col-sm-4 control-label">{{ 'security.login.password'|trans }}</label>
                  <div class="col-sm-8" >
                        <input type="password" id="password" name="_password" required="required"  class="form-control" placeholder="{{'Enter your password'|trans}}" />
                    </div> 
            </div>
                    
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <div class="checkbox">
                    <label>
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on"  > {{ 'security.login.remember_me'|trans }}
                    </label>
                  </div>
                </div>
              </div>   
                    
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <div class="checkbox">
                      <a href="{{ path('fos_user_resetting_request') }}">{{ 'security.login.forgotten_password'|trans }}</a>
                  </div>
                </div>
              </div>   
             <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock fos_user_content %}
